{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.IterABLE", "ES2020"],
    "allowJs": true,            
    "checkJs": false,
    "jsx": "react-jsx",         
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,            
    "isolatedModules": true,    
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true              
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
